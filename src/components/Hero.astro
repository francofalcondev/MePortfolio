---

import SocialIcons from  "@/components/SocialIcons.astro"
import LinkedinIcon from "@/assets/icons/LinkedinIcon.astro"
import GithubIcon from "@/assets/icons/GithubIcon.astro"
import DownloadIcon from "@/assets/icons/DownloadIcon.astro"
---
 
<section class="max-w-xl  items-start md:wax-w-2xl">
    <article class="flex flex-col sm:flex-row gap-6 sm:gap-10 items-center mb-5 mt-10">
        <img class="rounded-full shadow-lg w-24 h-24 sm:w-40 sm:h-40 object-scale-down" src="https://i.ibb.co/WGgkhy9/Dise-o-sin-t-tulo-11.png"/>
        <div class="relative">
            <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl    dark:text-white">
                Hey, soy Franco
                <span class="absolute top-0 right-0 -translate-y-1/2 translate-x-full 
                 inline-flex items-center gap-1 text-xs font-medium text-gray-500 border 
                  border-green-800  rounded-full px-2 py-0.5  ">
                    <span class="w-2 h-2 bg-green-500 rounded-full "></span>
                    Open to work
                </span>
            </h1>
        </div>
    </article>
    <article>
        <p class="text-2xl">
            +3 años de experiencia. <strong class="text-yellow-200">
                🧑🏻‍💻 Mobile Developer React Native & iOs.    
            </strong> 
            Especializado en el desarrollo de aplicaciones mobiles únicas.<br/>
            <span class="text-blue-300">Mendoza, Argentina 🇦🇷</span>

        </p>
        <nav class="flex flex-wrap gap-4 mt-8">
            <SocialIcons href=https://www.linkedin.com/in/francoherediadev/">
                <LinkedinIcon class="size-4"/>
                Linkedin
            </SocialIcons>
            <SocialIcons href="https://github.com/francofalcondev">
                <GithubIcon class="size-4"/>
                Github
            </SocialIcons>
            <SocialIcons>
                <DownloadIcon class="size-4"/>
                Download Resume
            </SocialIcons>
        </nav>
    </article>
</section>